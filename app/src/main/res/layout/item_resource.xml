<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resource_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!--<ImageView-->
    <!--android:id="@+id/iv_course_thumb"-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="60dp"-->
    <!--android:layout_weight="3"-->
    <!--android:src="@drawable/ic_more"-->
    <!--android:padding="4dp"-->
    <!--android:layout_margin="4dp"-->
    <!--android:layout_gravity="center_vertical"/>-->


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="132dp"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="130dp"
            android:layout_height="76dp"
            android:scaleType="center"
            android:src="@drawable/ic_state_test1" />

        <TextView
            android:id="@+id/tv_resource_use_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="80dp"
            android:text="在线生产"
            android:textColor="@color/qmui_config_color_blue"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/lnrLyt_course_status10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_resource_brand_label"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"

                android:gravity="center_vertical|right"

                android:text="用途"
                android:textColor="@color/app_color_description" />

            <TextView
                android:id="@+id/tv_resource_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"

                android:gravity="center_vertical|left"

                android:text="服务器"
                android:textColor="@color/app_color_description" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrLyt_course_status11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_resource_use_label"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"

                android:gravity="center_vertical|right"
                android:text="品牌"
                android:textColor="@color/app_color_description" />

            <TextView
                android:id="@+id/tv_resource_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"

                android:gravity="center_vertical|left"
                android:text="联想"
                android:textColor="@color/app_color_description" />


        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/lnrLyt_course_status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_resource_seq_id"
            style="@style/ResourceListItem"
            android:layout_height="wrap_content"
            android:text="流水号"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/lnrLyt_course_status2"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/ResourceListItemLabel"
                android:text="序列号" />

            <TextView
                android:id="@+id/tv_resource_serialnum"
                style="@style/ResourceListItem"
                android:text="dbjskbdjksfd" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrLyt_course_status3"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView

                style="@style/ResourceListItemLabel"
                android:text="资产编号" />

            <TextView
                android:id="@+id/tv_resource_code"
                style="@style/ResourceListItem"
                android:text="1dbsjdbsdj" />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/lnrLyt_course_status4"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView

                style="@style/ResourceListItemLabel"
                android:text="资产位置" />

            <TextView
                android:id="@+id/tv_resource_position"
                style="@style/ResourceListItem"
                android:text="12345678" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView

                style="@style/ResourceListItemLabel"
                android:layout_gravity="center"
                android:text="规格型号" />

            <TextView
                android:id="@+id/tv_resource_model_name"
                style="@style/ResourceListItem"
                android:text="联想 31120" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>